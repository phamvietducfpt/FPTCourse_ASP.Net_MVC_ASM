<div class="wm-mini-header">
    <span class="wm-blue-transparent"></span>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="wm-mini-title">
                    <h1> @Html.DisplayNameFor(model => model.Topic_Name)</h1>
                </div>
                <div class="wm-breadcrumb">
                    <ul>
                        <li><a href="index-2.html">Home</a></li>
                        <li><a href="index-2.html"> @Html.DisplayNameFor(model => model.Topic_Name)</a></li>
